<!--        android:visibility="gone"-->
<!--        android:text="@string/place_holder"-->
<!--        style="@style/TextAppearance.AppCompat.Title"-->
<!--        android:layout_gravity="center"-->
<!--        />-->

</LinearLayout>
</androidx.cardview.widget.CardView>